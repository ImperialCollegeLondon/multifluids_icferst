SHELL = /bin/sh

FC      = @FC@
FCFLAGS = -I../include @CPPFLAGS@ @FCFLAGS@ -I/usr/local/include -I./

MPIF90  = @MPIF90@

CC      = @CC@
CFLAGS  = @CPPFLAGS@ @CFLAGS@ -I../include -I/usr/local/include -g

CXX     = @CXX@
CXXFLAGS= @CPPFLAGS@ @CXXFLAGS@ -I../include -I/usr/local/include -I/usr/include/vtk-6.3

MAKE    = @MAKE@
AR  = @AR@
ARFLAGS = @ARFLAGS@

LIB = ../lib/lib@FEMDEM@.a

OBJS    =  frame.o Y3Dinit.o Y3D.o Y3Dmd.o  Y3D_interf.o  Y3Dcd.o  Y3Dfd.o Y3Did.o \
         Y3Dod.o  Y3Drd.o  Y3Dsd.o Y3Drs.o Y3Dhydpre.o Y3DpasstoFluidity.o Y3Ddup.o Y3Dring.o Ydrag.o \
         Y3Dinertia.o  Y3Dpacking.o  Y3Dring.o Y3Drscale.o Y3Dap.o Y3Dporp.o Y3Dodvtu.o Y3Dthm.o


.SUFFIXES: .f90 .F90 .c .cpp .o .a

.f90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.F90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $< || (rm $(LIB) && false)
.c.o:
	@echo "        CC $<"
	$(CC) $(CFLAGS) -c $< || (rm $(LIB) && false)
.cpp.o:
	@echo "        CXX $<"
	$(CXX) $(CXXFLAGS) -c $< || (rm $(LIB) && false)

default: $(OBJS)
	$(AR) $(ARFLAGS) $(LIB) $(OBJS)

# cancel implicit rule that tries to make .o from .mod with m2c:
%.o: %.mod

clean:
	rm -f *.o *.d 

