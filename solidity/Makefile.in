OBJS    = $(shell find . -mindepth 2 -maxdepth 2 -name '*.c' -o -name '*.cpp' -o -name '*.[fF]' -o -name '*.F90' | grep -v ^./lib | xargs)
MAKE    = @MAKE@ -s
AR	= @AR@

ARFLAGS	= r

VERSION = $(shell svnversion .)

default: femdem_library femdem_binary b3d_binary

femdem_binary: bin/@FEMDEM@

b3d_binary: bin/@B3D@

bin/@FEMDEM@: $(OBJS)
	@echo "BUILD femdem"
	@echo "    MKDIR bin"
	@mkdir -p bin
	@echo "    LD $(PROGRAM)"
	@$(LINKER) @CPPFLAGS@ -I./include -o $(PROGRAM) $(LIBS)

bin/@B3D@: 
	@echo "BUILD b3d"
	@mkdir -p ./tools/B3D/bin
	@mkdir -p ./tools/B3D/lib
	@cd tools/B3D/source ;$(MAKE);
	@cp tools/B3D/bin/b3d ./bin
	@cp tools/B3D/lib/lib@B3D@.a ./lib

static: femdem_library

shared: lib/shared/$(SLIB_FEMDEM).1

lib/shared/$(SLIB_FEMDEM).1: lib/lib@FEMDEM@.a
	@echo "BUILD shared libfemdem"
	@rm -rf tmp
	@mkdir -p tmp lib/shared
	@cp $(LIB_FEMDEM) tmp
	@cd tmp; ar x lib@FEMDEM@.a; rm lib@FEMDEM@.a; cd ..
	@echo "    LD lib@FEMDEM@.so"
	@$(LINKER) -shared -Wl,-soname,$(SLIB_FEMDEM).1 -o lib/shared/$(SLIB_FEMDEM).1 tmp/* -L./lib -lvtkfortran @VTK_LIBS@
	@rm -rf tmp
	@cd lib/shared; ln -sf $(SLIB_FEMDEM).1 $(SLIB_FEMDEM); cd ../..

femdem_library: lib/lib@FEMDEM@.a 

lib/lib@FEMDEM@.a: $(OBJS)
	@echo "DEFINE __FEMDEM_VERSION__"
	@echo "#undef __FEMDEM_VERSION__" >> include/confdefs.h
	@echo "#define __FEMDEM_VERSION__ \"$(VERSION)\"" >> include/confdefs.h
	@echo "BUILD libfemdem"
	@echo "    MKDIR lib"
	@mkdir -p lib
	@echo "    MAKE source"
	@cd source; 	$(MAKE)

install:
	@$(MAKE) install_femdem install_b3d

install_femdem:
	@echo "        $(PROGRAM)		  --> $(FEMDEM_ROOT)/bin/@FEMDEM@"
	@INSTALL@ $(PROGRAM) $(FEMDEM_ROOT)/bin/@FEMDEM@
	@echo "        $(LIB_FEMDEM)	  --> $(FEMDEM_ROOT)/lib/lib@FEMDEM@.a"
	@INSTALL@ $(LIB_FEMDEM) $(FEMDEM_ROOT)/lib/lib@FEMDEM@.a
install_b3d:
	@echo "        $(PROGRAM1)		  --> $(FEMDEM_ROOT)/bin/@B3D@"
	@INSTALL@ $(PROGRAM1) $(FEMDEM_ROOT)/bin/@B3D@
	@echo "        ./lib/libb3d.a	  --> $(FEMDEM_ROOT)/lib/lib@B3D@.a"
	@INSTALL@ ./lib/lib@B3D@.a $(FEMDEM_ROOT)/lib/lib@B3D@.a

all:
	$(MAKE) default
	$(MAKE) install

clean:
	@echo "    CLEAN source"
	@cd source; $(MAKE) clean
	@cd 
	@rm -fr doc *.cache core *.o config.status
	@rm -fr bin/* lib
	@find ./ \( -name work.pc \) -exec rm {} \;
	@find ./ \( -name work.pcl \) -exec rm {} \;


