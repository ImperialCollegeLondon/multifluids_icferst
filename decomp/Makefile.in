SHELL = @SHELL@

FC      = @FC@
FCFLAGS = -I../include @FCFLAGS@

MPIF90  = @MPIF90@

CC      = @CC@
CFLAGS  = @CFLAGS@  -I../include

CXX     = @CXX@
CXXFLAGS= @CXXFLAGS@  -I../include

MAKE    = @MAKE@
AR  = @AR@
ARFLAGS = @ARFLAGS@

LIB = ../lib/lib@FLUIDITY@.a

OBJS = partition.o

.SUFFIXES: .f90 .F90 .c .o .a

.f90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $<
.F90.o:
	@echo "        FC $<"
	$(FC) $(FCFLAGS) -c $<
.cpp.o:
	@echo "        CXX $<"
	$(CXX) $(CXXFLAGS) -c $<

$(LIB): $(OBJS)
	@mkdir -p ../lib
	@$(AR) $(ARFLAGS) $(LIB) $(OBJS)
default: $(LIB)

clean:
	rm -f *.o *.mod

